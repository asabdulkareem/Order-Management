@using OrderManagement.Domain.Models
@model List<Category>

<li class="dropdown">
    <a asp-controller="Product"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Products<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li>
                <a asp-page="ProductList" asp-route-category="@category.CategoryName">@category.CategoryName</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-page="ProductList" asp-route-Category="">View all Products</a>
        </li>
    </ul>
</li>